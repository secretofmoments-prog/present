  <script>
    function celebrate() {
      confetti({
        particleCount: 200,
        spread: 100,
        origin: { y: 0.6 }
      });
      document.getElementById('cheerSound').play();
    }

    function showPopup() {
      document.getElementById('popup').style.display = 'block';
    }

    function closePopup() {
      document.getElementById('popup').style.display = 'none';
    }

    // typing effect
    const text = `I know you can do it. I always believed you could reach this journey.\nBut I also know it wasnâ€™t easy, right? Thatâ€™s the thing â€” youâ€™ve gone through so much to get here, and I just want to say youâ€™re truly amazing.\nIâ€™m so proud of you. Once again, congratulations on your graduation, and I hope you stay strong and everything flows smoothly in your next career steps. ðŸŒŸ`;

    let i = 0;
    function typeWriter() {
      if (i < text.length) {
        document.getElementById("typedText").innerHTML += text.charAt(i);
        i++;
        setTimeout(typeWriter, 40);
      }
    }
    window.onload = typeWriter;

    // generate stars âœ¨
    const starsContainer = document.querySelector('.stars');
    for (let i = 0; i < 50; i++) {
      const star = document.createElement('div');
      star.classList.add('star');
      star.textContent = 'âœ¦';
      star.style.top = Math.random() * 100 + '%';
      star.style.left = Math.random() * 100 + '%';
      star.style.animationDuration = 2 + Math.random() * 3 + 's';
      starsContainer.appendChild(star);
    }
